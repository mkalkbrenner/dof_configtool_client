{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}
    <h2>{{ file }} <i>{{ cycle }}</i></h2>
    {{ form_start(textedit_form) }}
    <kbd>{{ form_label(textedit_form.text) }}</kbd>
    {{ form_help(textedit_form.text) }}
    {{ form_errors(textedit_form) }}
    {{ form_widget(textedit_form.text) }}
    {{ form_end(textedit_form) }}

    <hr>

    {% if git_diff|default %}
        {% include 'git_diff.html.twig' %}
    {% endif %}

{% endblock %}

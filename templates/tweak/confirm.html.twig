{% extends 'base.html.twig' %}

{% block title %}Confirm tweaked DOF Configs{% endblock %}

{% block body %}
    <h1>Tweaks to be applied</h1>
    {% for file,diff in diffs %}
        <h3>{{ file }}</h3>
        <div class="table-responsive" style="max-height: 300px">
            <table class="table table-striped table-bordered">
            {% for line in diff %}
                {{ line|raw }}
            {% endfor %}
            </table>
        </div>
    {% endfor %}
    {{ form_start(confirm_form) }}
    {{ form_errors(confirm_form) }}
    {{ form_widget(confirm_form) }}
    {{ form_end(confirm_form) }}

    <hr>

    {% include 'tweak/dof_explanation.html.twig' %}
{% endblock %}
